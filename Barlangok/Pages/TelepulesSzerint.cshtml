@page
@model Barlangok.Pages.TelepulesSzerintModel

@{
    ViewData["Title"] = "TelepulesSzerint";
}

<h1>TelepulesSzerint</h1>

<h4>BarlangokModel</h4>
<p>
    <a asp-page="Create">Create New</a>
</p>
<p>
    <form method="get">
        <select asp-for="@Model.KivalasztottTelepules">
            <option value="0">--- Válassz egy települést ---</option>
            @foreach (var k in Model.Telepules)
            {
                <option value="@k">@k</option>
            }
        </select>
        <input type="submit" value="Szűrés" />
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Barlangok[0].Telepules)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Barlangok[0].Nev)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Barlangok[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Barlangok[0].Hossz)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Barlangok)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Telepules)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nev)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hossz)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>